{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020", "dom"],
      "types": ["@figma/plugin-typings"],
      "strict": true,
      "strictNullChecks": false,  // 非推奨ですが、最終手段として
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }